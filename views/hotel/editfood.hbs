<div class="dashboard-wrapper mt-5">
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">

                    <h2 class="pageheader-title">Add Rooms</h2>
                    <p class="pageheader-text"></p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>

                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header"></h5>
                <div class="card-body">
                    <form action="/hotel/editfood/{{fooddetails._id}}" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                            <label 
                                class="col-3 col-lg-2 col-form-label text-right">Food</label>
                            <div class="col-9 col-lg-10">
                                <input  name="foodname" type="text" value="{{fooddetails.foodname}}"
                                    class="form-control">
                                    <input type="hidden" name="hid" value="{{hotel._id}}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Package Name</label>
                            <div class="col-9 col-lg-10">
                                <input name="package" type="text" value="{{fooddetails.package}}" required="" placeholder="package name"
                                    class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Price</label>
                            <div class="col-9 col-lg-10">
                                <input  name="price" type="number" value="{{fooddetails.price}}"
                                    class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label 
                                class="col-3 col-lg-2 col-form-label text-right">Category</label>
                            <div class="col-9 col-lg-10">
                               <select name="category" id="" class="form-control">
                                   <option value="{{fooddetails.category}}" >{{fooddetails.category}}</option>
                                   {{#each categories}}
                                   <option value="{{this.category}}">{{this.category}}</option>
                                   {{/each}}
                               </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label  class="col-3 col-lg-2 col-form-label text-right">Image</label>
                            <div class="col-9 col-lg-10">
                                <img src="/hotel/food-images/{{fooddetails._id}}.jpg" alt="" style="width: 100px; height:100px;">
                                <input  type="file" name="image" 
                                    placeholder="" class="form-control">
                                    
                            </div>
                        </div>
                        <div class="col-sm-6 pl-0">
                                <p class="text-right">
                                    <button type="submit" class="btn btn-space btn-primary">Update</button>
                                    <a href="/hotel/food" class="btn btn-space btn-secondary">Cancel</a>
                                </p>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>