<body>

	<h1>LOGIN</h1>

	<h2>Signup to your Account</h2>
    {{#if signupErr}}
    <p class="m-2 text-danger h5">Username/mobile Already exist</p>
    {{/if}}
	<div class="w3layoutscontaineragileits">
		<form action="/hotel/signup" method="post" enctype="multipart/form-data">
			<input type="text" name="username" placeholder="EMAIL" required="">
			<input type="password" name="password" placeholder="password (min 8-14 characters)" required="" minlength="8" maxlength="14">
			<input type="text" name="hotelname" placeholder="Hotel name" required="">
            <input type="text" name="city" placeholder="located city" required="">
            <input type="text" name="hoteladdress" placeholder="Address" required="">
            <input type="text" name="mobile" placeholder="Mobile" required="">
            <label for="hotelimage" class="">Hotel Image</label>
            <input type="file" name="image" required="" id="hotelimage">
            <label for="licenseimage" class="">Hotel licenese</label>
            <input type="file"  name="license" required="" id="licenseimage">
            <input type="hidden" name="status" value="0">
			<input type="hidden" name="block" value="0">
             <input type="hidden" name="joined" value="{{today}}">
			<div class="aitssendbuttonw3ls mt-4 mb-5" >
				<input type="submit" value="Signup" style="background: #ffffff; color:rgb(0, 0, 0);">
				<p><a href="/hotel">Already have an account<span>â†’</span></a></p>
				<div class="clear"></div>
			</div>
		</form>
	</div>

	

