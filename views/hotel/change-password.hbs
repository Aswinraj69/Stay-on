<div class="dashboard-wrapper mt-5">
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Change Password</h2>
                    <p class="pageheader-text"></p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">

                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 ml-auto mr-auto">
            <div class="card">

                <div class="card-body">
                    {{#if changeFail}}
                    <p class="text-danger text-center">Invaild Password</p>
                    {{/if}}
                    {{#if passChanged}}
                    <div class="alert alert-success" role="alert">
                      Password changed successfully
                    </div>
                    {{/if}}
                    <form action="/hotel/change-password" method="post">
                        <div class="form-group row">

                            <div class="col-md-8 ml-auto mr-auto">
                                <input name="password1" type="password" required="" placeholder="Old Password"
                                    class="form-control">
                                <input name="hid" type="hidden" value="{{hotel._id}}">
                            </div>
                        </div>
                        <div class="form-group row">

                            <div class="col-md-8 ml-auto mr-auto">
                                <input name="password2" type="password" required="" placeholder="New Password"
                                    class="form-control">
                            </div>
                        </div>

                        <div class="ml-auto mr-auto col-md-8">

                            <button class="btn btn-space btn-primary text-center ml-5 mt-3">Change Password</button>


                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>