<section id="services" class="services">
    <div class="container mt-5">

        <div class="section-title">
            <h2 style="font-family:Alegreya;">{{roomdetails.roomname}}</h2>
            
        </div>
        {{#if rated}}
        <center><p class="alert alert-success text-left col-md-6" id="rated">Thanks for reviewing !</p></center>
        {{/if}}

    </div>
</section>
<section class="bg-light">
    <div class="container ">



        <div class=" col-md-12">
            <form action="/booking-room" method="POST" enctype="multipart/form-data">
                <div class="row">

                    <div class="col-md-6">
                        <div class="product-slider" style="padding:0px">
                            <div id="productslider-1" class="product-carousel carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active">
                                    </li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <input type="hidden" name="hid" value="{{roomdetails.hid}}">
                                        <input type="hidden" name="rid" value="{{roomdetails._id}}">
                                        <input type="hidden" name="uid" value="{{userdetails._id}}">
                                        <input type="hidden" name="status" value="0">
                                        <img class="d-block" src="/hotel/rooms-images/{{roomdetails._id}}1.jpg"
                                            style="width:525px; height:350px" alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block" src="/hotel/rooms-images/{{roomdetails._id}}2.jpg"
                                            style="width:525px; height:350px" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block" src="/hotel/rooms-images/{{roomdetails._id}}3.jpg"
                                            style="width:525px; height:350px" alt="Third slide">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                                    data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                                    data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product-details">
                            {{#if bookingErr}}
                            <div class="alert alert-danger" role="alert" id="fail">
                                Room is not available on this dates !
                            </div>
                            {{/if}}
                            <div class="border-bottom pb-3 mb-3">
                                <h2 class="mb-3" style="font-family:Alegreya;">{{roomdetails.roomname}} <a
                                        href="https://goo.gl/maps/vqWs6ETuX893qAt26"><span
                                            style="font-size:15px;float: right ;" class=""><i
                                                class="icofont-location-pin">view on Map</i></span></a></h2>

                                <div class="product-rating d-inline-block float-right">
                                    <h5><span class="badge badge-success">{{rate}}</span><i
                                            class="fa fa-star text-success"></i></h5>
                                </div>
                                <h3 class="mb-0 text-primary">{{roomdetails.roomprice}}</h3>
                            </div>
                            <div class="product-colors border-bottom">
                                <h4>No of Peoples</h4>
                                <select class="form-control col-md-3" name="people" required>
                                    <option value="" selected="selected" disabled>--select--</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>

                                </select>
                                <div class="row mt-4">
                                    <div class="col-md-6">
                                        <h5>Check <i class="icofont-long-arrow-down"></i></h5>
                                        <input type="date" name="checkin" style="margin-left:1px" required=""
                                            placeholder="Check In" class="form-control datepicker " id="checkin">
                                    </div>


                                    <div class="col-md-6 ">
                                        <h5 style="">Check<i class="icofont-long-arrow-up"></i></h5>
                                        <input type="date" name="checkout" required="" placeholder="Check Out"
                                            class="form-control datepicker ">

                                    </div>

                                </div>
                            </div>

                            <div class="product-description">
                                <h4 class="mb-1">Descriptions</h4>
                                <br>
                                <p>{{hoteldetails.about}}</p>
                                <p>For more details: <a href="tel:{{hoteldetails.mobile}}"
                                        class="btn btn-primary btn-sm rounded-circle"> <i class="icofont-phone"></i></a>
                                </p>
                                <button class="btn btn-primary btn-block btn-lg">Book</button>
                                <br>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <h4 class=" text-center mt-4">Room</h4>
                        <div class=" p-3 gallery">
                            <a href="/hotel/rooms-images/{{roomdetails._id}}1.jpg" data-lightbox="mygallery">
                                <img class="" src="/hotel/rooms-images/{{roomdetails._id}}1.jpg" alt="First slide">
                            </a>
                            <a href="/hotel/rooms-images/{{roomdetails._id}}2.jpg" data-lightbox="mygallery">
                                <img class="" src="/hotel/rooms-images/{{roomdetails._id}}2.jpg" alt="First slide">
                            </a>
                            <a href="/hotel/rooms-images/{{roomdetails._id}}3.jpg" data-lightbox="mygallery">
                                <img class="" src="/hotel/rooms-images/{{roomdetails._id}}3.jpg" alt="First slide">
                            </a>
                            <a href="/hotel/rooms-images/{{roomdetails._id}}4.jpg" data-lightbox="mygallery">
                                <img class="" src="/hotel/rooms-images/{{roomdetails._id}}4.jpg" alt="First slide">
                            </a>
                            <a href="/hotel/rooms-images/{{roomdetails._id}}5.jpg" data-lightbox="mygallery">
                                <img class="" src="/hotel/rooms-images/{{roomdetails._id}}5.jpg" alt="First slide">
                            </a>


                            {{!-- <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="/hotel/rooms-images/{{roomdetails._id}}1.jpg"
                                            style="height: 400px;" alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="/hotel/rooms-images/{{roomdetails._id}}2.jpg"
                                            style="height: 400px;" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="/hotel/rooms-images/{{roomdetails._id}}3.jpg"
                                            style="height: 400px;" alt="Third slide">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                    data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span> </a>
                                <a class="carousel-control-next " href="#carouselExampleControls" role="button"
                                    data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span> </a>
                            </div> --}}

                        </div>




                    </div>
                    <div class="col-md-12">
                        <h5 class="font-weight-bold text ml-2 mt-3">Ratings and reviews</h2>
                            <div class="row mt-4">
                                <div class="col-md-2 border">

                                    <p class="badge badge-success m-5 text-center"><span class="h5">{{rate}} <i
                                                class="fa fa-star "></i></span></p>

                                </div>
                                <div class="col-md-4 border">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <small>5 <i class="fa fa-star text-dark fa-xs "></i></small>
                                            <small>4 <i class="fa fa-star text-dark fa-xs"></i></small>
                                            <small>3 <i class="fa fa-star text-dark fa-xs"></i></small>
                                            <small>2 <i class="fa fa-star text-dark fa-xs"></i></small>
                                            <small>1 <i class="fa fa-star text-dark fa-xs"></i></small>
                                        </div>
                                        <div class="col-md-8 ">
                                            <div class="progress" style="height: 4%; margin-top:12px;">
                                                <div class="progress-bar bg-success" role="progressbar"
                                                    style="width: {{five}}%" aria-valuenow="12" aria-valuemin="0"
                                                    aria-valuemax="100"></div>
                                            </div>
                                            <div class="progress " style="height: 4%;margin-top:18px;">
                                                <div class="progress-bar bg-success" role="progressbar"
                                                    style="width: {{four}}%" aria-valuenow="12" aria-valuemin="0"
                                                    aria-valuemax="100"></div>
                                            </div>
                                            <div class="progress" style="height: 4%;margin-top:19px;">
                                                <div class="progress-bar bg-success" role="progressbar"
                                                    style="width: {{three}}%" aria-valuenow="12" aria-valuemin="0"
                                                    aria-valuemax="100"></div>
                                            </div>
                                            <div class="progress " style="height: 4%;margin-top:18px;">
                                                <div class="progress-bar bg-warning" role="progressbar"
                                                    style="width: {{two}}%" aria-valuenow="12" aria-valuemin="0"
                                                    aria-valuemax="100"></div>
                                            </div>
                                            <div class="progress " style="height: 4%;margin-top:20px;">
                                                <div class="progress-bar bg-danger" role="progressbar"
                                                    style="width: {{one}}%" aria-valuenow="12" aria-valuemin="0"
                                                    aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <small>{{five}}</small>
                                            <small>{{four}}</small>
                                            <small>{{three}}</small>
                                            <small>{{two}}</small>
                                            <small>{{one}}</small>
                                        </div>

                                    </div>



                                </div>
                                <div class="col-md-6 ">
                                    <div class="col-md-3 float-right">
                                        {{#if userdetails}}
                                        <a href="#" class="btn btn-light" id="Rate"
                                            style="box-shadow: 0 1px 2px 0 rgb(0 0 0 / 26%);border: none;font-size: 14px;color: #212121;padding: 16px 36px;cursor: pointer; margin: 18px 18px 0 0;">Rate
                                            Room</a>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>



                    </div>
                    <div class="col-md-12 mt-4">
                        {{#each reviews}}
                        <div class="col-md-3 mt-5 ">
                            <p class="font-weight-bold">{{this.user}}<span class="badge badge-success m-2">{{this.rate}}<i
                                        class="fa fa-star fa-xs text-white"></i></span></p>
                        </div>
                        <div class="col-md-12 mt-2">
                            <p>{{this.review}}</p>
                            {{!-- <a href=""><i class="fa fa-thumbs-up fa-xs text-danger"></i></a><small> 23 <p></p> </small>
                            <a href=""><i class="fa fa-thumbs-down fa-xs"></i></a><small> 0</small> --}}
                        </div>
                       {{/each}}

                    </div>

                </div>
            </form>
            <div class="modal fade" id="Rating" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Rate & Review</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form action="/rate" method="POST">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Rate: /5</label>
                                    <input type="number" class="form-control" name="rate" max="5" min="0" required>
                                    <input type="hidden" name="userId" value="{{userdetails._id}}">
                                    <input type="hidden" name="user" value="{{userdetails.name}}">
                                    <input type="hidden" name="email" value="{{userdetails.username}}">
                                    <input type="hidden" name="mobile" value="{{userdetails.mobile}}">
                                    <input type="hidden" name="roomId" value="{{roomdetails._id}}">
                                    <input type="hidden" name="hotelId" value="{{hoteldetails._id}}">
                                    <input type="hidden" name="roomname" value="{{roomdetails.roomname}}">
                                </div>
                                <div class="form-group">
                                    <label for="message-text" class="col-form-label">Review :</label>
                                    <textarea class="form-control" name="review" required></textarea>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button class="btn btn-primary">Send </button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>



        </div>
</section>
<script>
    lightbox.option({
        'resizeDuration': 100,
        'wrapAround': true,
    })
    setTimeout(function () {
        $('#fail').css('display', 'none')
    }, 5000);
    $('#Rate').on('click', function () {
        $('#Rating').modal('show')
    })
    setTimeout(function () {
        $('#rated').css('display', 'none')
    }, 5000);

</script>