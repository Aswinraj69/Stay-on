<section class="bg-light">
    <div class="container ">
        <div class=" col-md-12">
            <div class="container mt-5">
                <div class="section-title">
                    <h2>Book food </h2>
                </div>
            </div>

            <form class="col-md-12" style="margin-left: 152px;" method="POST">

                <div class="row ">

                    <input class="form-control col-md-6 l-5 " type="search" placeholder="Search" name="food"
                        aria-label="Search" id="food">
                    <button class="btn btn-outline-success col-md-2 my-2 my-sm-0" type="button">Search</button>

                </div>
            </form>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row" id="foods">
                    {{#each foods}}
                    <div class="col-md-5 mt-5">

                        <div class="card" style="height:300px;">
                            <img class="card-img-top img-fluid p-2"
                                src="/hotel/food-images/{{this._id}}.jpg" id="food_image"
                                alt="Card image cap" style="width: 250px; height:116px;">
                            <div class="card-body">

                                <h6 id="restuarant_name">{{this.restaurant}}</i></h6>
                                <hr>
                                    <h6 id="food_name">{{this.foodname}}</h6>
                                        <h6 class="" id="food_price" style="font-family: system-ui;">{{this.price}}/-</h6>
                                <div class="text-center mt-3">
                                    <a class="btn btn-sm btn-primary" href="/add-food/{{this._id}}" >Add +</a>
                                </div>


                            </div>
                        </div>

                    </div>
                    


                {{/each}}
                </div>
            </div>
            <div style="border-left: 0.5px solid rgb(173, 180, 173);margin-top:50px"></div>
            <div class="col-md-5 mt-5">
                {{!-- <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Added Items</h3>
                        <p class="card-text">Food</p>
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                </div> --}}
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Restaurant</th>
                            <th scope="col">Food</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}
                        
                        <tr>
                            {{#each this.food}}
                            <th scope="row">{{this.restaurant}}</th>
                            
                            <td>{{this.foodname}}</td>
                            {{/each}}
                            <td><small><a href="#"><i class="fa fa-minus mr-2"></i></a></small> {{this.quantity}}  <small><a href="#"><i class="fa fa-plus ml-2"></i></a></small></td>
                            {{#each this.food}}
                            <td>{{this.price}}/-</td>
                            {{/each}}
                            <td><a href="#"><i class="icofont icofont-trash "></i></a></td>
                        </tr>
                       {{/each}}
                        <tr>
                            <td></td>
                            <td></td>
                            <td>Sub Total</td>
                            <td>1200/-</td>
                            <td><a href="#"class="btn btn-rounded btn-success">Order</a></td>
                        </tr>
                        <td></td>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</section>