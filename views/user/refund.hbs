<section id="services" class="services">
    <div class="container">

        <div class="section-title mt-5">
            <h2>Why Cancel ?</h2>

        </div>

    </div>
</section>
<div class="container " style="margin-bottom: 350px;">
    <div class="row">
        <div class="col-md-6"> 
            <form class="" action="/cancel-booking/{{bookId}}" method="POST">
                <div class="form-group">
                    <h3 class="form-text text-dark mb-4">Reason for Cancelling..?</h3>

                    <select name="reason" id="" class="form-control">
                        <option value="" selected="" disabled>--select--</option>
                        <option value="Booked by Mistake">Booked by Mistake</option>
                        <option value="Not intrested with facilities">Not intrested with facilities</option>
                        <option value="security issues">security issues</option>
                        <option value="Not as much as i expected">Not as much as i expected</option>
                        <option value="Very Expensive">Very Expensive</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Bank holder Name" name="holdername">
                     <input type="hidden" name="userId" value="{{userdetails._id}}">
                     <input type="hidden" name="name" value="{{userdetails.name}}">
                     <input type="hidden" name="email" value="{{userdetails.username}}">
                     <input type="hidden" name="total" value="{{total}}">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" placeholder="Account number" name="accno">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Branch" name="branch">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control" placeholder="IFSC" name="ifsc">
                </div>
                <div class="form-group">
                    <textarea name="comment" id="" class="form-control" placeholder="What we want to improve ?" ></textarea>
                </div>

                <button  class="btn btn-primary">Refund</button>
                <a href="" class="btn btn-info">Cancel</a>
                <p class="mt-3">*Amount will be refunded within 24hours.</p>
            </form>
        </div>
        <div class="col-md-6">
            <div>
                
                <img src="/user/assets/images/refund.svg" alt="" class="col-md-8" style="float: right;">
                
            </div>
            
            
        </div>

    </div>
</div>