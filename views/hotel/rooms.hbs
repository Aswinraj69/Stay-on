
<div class="dashboard-wrapper mt-5">
            <div class="container-fluid  dashboard-content">
                <!-- ============================================================== -->
                <!-- pageheader -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-header">
                            
                            <h2 class="pageheader-title">Rooms</h2>
                            <p class="pageheader-text"></p>
                            <div class="page-breadcrumb">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                        
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- end pageheader -->
                <!-- ============================================================== -->
                <div class="row">
                    <!-- ============================================================== -->
                    <!-- basic table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <a href="/hotel/addrooms" class="btn btn-success mb-5"><i class="fa fa-plus"></i> Add Rooms</a>
                        <div class="card">  
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered first" id="data_tables">
                                        <thead>
                                            <tr>
                                                <th>Image</th>
                                                <th>Name</th>
                                                <th>Price</th>
                                                
                                                <th>Features</th>
                                                
                                                <th>Category</th>
                                                
                                                <th>Actions</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each rooms}}
                                            <tr>
                                                <td><img src="/hotel/rooms-images/{{this._id}}1.jpg" alt="" style="width: 100px; height:100px;"></td>
                                                <td>{{this.roomname}}</td>
                                                <td>{{this.roomprice}}</td>
                                                
                                                <td>{{this.roomfeatures}}</td>
                                                
                                                <td>{{this.category}}</td>
                                                
                                                <td>
                                                    <a href="/hotel/editroom/{{this._id}}" class="btn btn-primary text-white" >Edit</a>
                                                    <a href="/hotel/deleteroom/{{this._id}}"class="btn btn-danger text-white">Delete</a>
                                                </td>
                                                
                                            </tr>
                                            {{/each}}
                                           
                                        </tbody>
                                        
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end basic table  -->
                    <!-- ============================================================== -->
                </div>
               
                
                
                
            </div>
            
        </div>