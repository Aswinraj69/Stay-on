
<div class="dashboard-wrapper mt-5">
            <div class="container-fluid  dashboard-content">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-header">
                            
                            <h2 class="pageheader-title">Hotels</h2>
                            <p class="pageheader-text"></p>
                            <div class="page-breadcrumb">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                        
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
               
                <div class="row">
                   
                   
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <a href="/hotel/addhotelfood" class="btn btn-success mb-5"><i class="fa fa-plus"></i> Add Resutarants & Food</a>
                        <div class="card">  
                            <div class="card-body">
                                <h5>Hotels & Foods</h5>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered first">
                                        <thead>
                                            <tr>
                                                <th>Restaurant</th>
                                                <th>Food</th>
                                                <th>Price</th>
                                                <th>Category</th>
                                                <th>Image</th>
                                                <th>Actions</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each hotelfoods}}
                                            <tr>
                                                <td>{{this.restaurant}}</td>
                                                <td>{{this.foodname}}</td>
                                                <td>{{this.price}}/-</td>
                                                <td>{{this.category}}</td>
                                                <td><img src="/hotel/food-images/{{this._id}}.jpg" alt="" style="width: 60px; height:60px;"></td>
                                                <td>
                                                    <a href="/hotel/edithotelfood/{{this._id}}" class="btn btn-primary text-white" >Edit</a>
                                                    <a href="/hotel/deletehotelfood/{{this._id}}" class="btn btn-danger text-white">Delete</a>
                                                </td>
                                                
                                            </tr>
                                           {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <a href="/hotel/addfoodcategory" class="btn btn-success mb-5"><i class="fa fa-plus"></i> Add category</a>
                        <div class="card">  
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered first">
                                        <thead>
                                            <tr>
                                                <th>Category</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each categories}}
                                            <tr>
                                                
                                                <td>{{this.category}}</td>
                                                <td>  
                                                    <a href="/hotel/deletecategory/{{this._id}}" class="btn btn-danger text-white">Delete</a>
                                                </td>
                                                
                                            </tr>
                                           {{/each}}
                                        </tbody>
                                        
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
               
                
                
                
            </div>
           
        </div>