<div class="dashboard-wrapper mt-5">
    <div class="container-fluid  dashboard-content">
        <!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">

                    <h2 class="pageheader-title">Rooms Booking</h2>
                    <p class="pageheader-text"></p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>

                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- ============================================================== -->
            <!-- basic table  -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered first" id="data_tables">
                                <thead>
                                    <tr>
                                        <th>Customer Name</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Booked</th>
                                        <th>Room no</th>
                                        <th>Checkin</th>
                                        <th>Checkout</th>
                                        <th>Guest</th>
                                        <th>Mobile</th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each bookings}}
                                    <tr>
                                        <td>{{this.customername}}</td>
                                        <td>{{this.roomname}}</td>
                                        <td>{{this.total}}/-</td>
                                        <td>{{this.date}}</td>
                                        <td>{{this.roomno}}</td>
                                        <td>{{this.checkin}}</td>
                                        <td>{{this.checkout}}</td>
                                        <td>{{this.people}}</td>
                                        <td>{{this.mobile}}</td>
                                        <td class="text-center">
                                            <a href="/hotel/checkout/{{this._id}}" class="btn btn-primary ">Checkout</a>
                                        </td>

                                    </tr>
                                    {{/each}}

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end basic table  -->
            <!-- ============================================================== -->
        </div>


        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">

                    <h2 class="pageheader-title">Foods Booking</h2>
                    <p class="pageheader-text"></p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>

                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first" id="food_table">
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    
                                    <th>Food & restuarant</th>
                                    <th>Total</th>
                                    <th>Room no</th>
                                    <th>Date to deliver</th>
                                    <th>Time</th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                {{#each foods}}

                                <tr>
                                    <td>{{this.orderdetails.customername}}</td>

                                    
                                    <td><button class="btn btn-primary food">View</button></td>

                                    <td>{{this.total}}/-</td>
                                    <td>{{this.orderdetails.roomno}}</td>
                                    <td>{{this.orderdetails.datetodeliver}}</td>
                                    <td>{{this.orderdetails.time}}</td>

                                    <td class="text-center">
                                        <a href="/hotel/food-delivered/{{this._id}}" class="btn btn-primary ">Delivery</a>
                                    </td>

                                </tr>
                                {{/each}}


                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Button trigger modal -->


    <!-- Modal -->
    <div class="modal fade" id="foodModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Foods</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    
                    <table class="table-responsive table table-striped table-bordered first">
                      
                        <tbody>
                            {{#each foods}}
                            <tr>
                                
                                {{#each this.foods}}
                                <th>{{this.foods.foodname}}</td>
                                <td>From : <span class="font-weight-bold">{{this.foods.restaurant}}</span></td>
                                {{/each}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    
                </div>
            </div>
        </div>
    </div>
    

</div>
<script src="/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
<script>

    $('.food').on('click', function () {
        $('#foodModal').modal('show')
    })
     $('.restuarant').on('click', function () {
        $('#hotelname').modal('show')
    })
</script>