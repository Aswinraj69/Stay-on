
<div class="dashboard-wrapper mt-5">
            <div class="container-fluid  dashboard-content">
                <!-- ============================================================== -->
                <!-- pageheader -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-header">
                            
                            <h2 class="pageheader-title">Hotels</h2>
                            <p class="pageheader-text"></p>
                            <div class="page-breadcrumb">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                        
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- end pageheader -->
                <!-- ============================================================== -->
                <div class="row">
                    <!-- ============================================================== -->
                    <!-- basic table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <a href="/admin/addhotels" class="btn btn-success mb-5"><i class="fa fa-plus"></i> Add Hotel</a>
                        <div class="card">  
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered first">
                                        <thead>
                                            <tr>
                                                <th> Hotel Name</th>
                                                <th>Location</th>
                                                <th>Joined</th>
                                                <th>Contact</th>
                                                <th>Address</th>
                                                <th>Image</th>
                                                <th>Actions</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each hotels}}
                                            <tr>
                                                <td>{{this.hotelname}}</td>
                                                <td>{{this.city}}</td>
                                                <td>{{this.joined}}</td>
                                                <td>{{this.mobile}}</td>
                                                <td>{{this.hoteladdress}}</td>
                                                <td><img src="/hotel/hotel-images/{{this._id}}.jpg" alt="" style="width: 80px; height:80px;"></td>
                                                <td>
                                                    <a href="/admin/edithotel/{{this._id}}" class="btn btn-primary text-white" >Edit</a>
                                                    <a href="/admin/deletehotel/{{this._id}}"class="btn btn-danger text-white">Delete</a>
                                                </td>
                                                
                                            </tr>
                                            {{/each}}
                                           
                                        </tbody>
                                        
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end basic table  -->
                    <!-- ============================================================== -->
                </div>
               
                
                
                
