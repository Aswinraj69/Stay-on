<section id="services" class="services">
    <div class="container mt-5">

        <div class="section-title">
            <h2>TRAVELIX</h2>

        </div>



    </div>
</section>
<div class="container " >
    <div class="col-md-12">
        {{#if rooms}}
        {{#each rooms}}
        <div class="card">

            <div class="card-body">

                <div class="row align-items-center">

                    <div class="col-xl-9 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="user-avatar float-xl-left pr-4 float-none">
                            <img src="/hotel/rooms-images/{{this._id}}1.jpg" alt="User Avatar"
                                class="rounded-circle user-avatar-xl">
                        </div>
                        <div class="pl-xl-3">
                            <div class="m-b-0">
                                <div class=" d-inline-block" >
                                    <h2 class="font-24 m-b-10" style="font-family:alegreya;">{{this.roomname}}</h2>
                                </div>
                                
                            </div>
                            <div class="user-avatar-address">
                                <p class="mb-2"><i class="fa fa-map-marker-alt mr-2  text-primary"></i>{{this.city}}
                                    </span>
                                </p>

                                <div class="mt-3">
                                    <a href="#" class="mr-1 badge badge-light">{{this.roomfeatures}}</a>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="float-xl-right float-none mt-xl-0 mt-4">
                            
                            <a href="/room-details/{{this._id}}" class="btn btn-info">View</a>
                        </div>

                    </div>

                </div>

            </div>

        </div>
        {{/each}}
        {{else}}
        <div>
            <img src="/user/assets/images/norooms.svg" alt="" style="width: 50%;margin-left:223px;">
            <h4 class="text-center mb-5" style="margin-top:50px;">All rooms for this hotel have filled.</h4>
        </div>
        {{/if}}




    </div>

</div>