<div class="dashboard-wrapper mt-5">
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">

                    <h2 class="pageheader-title">Add Rooms</h2>
                    <p class="pageheader-text"></p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>

                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header"></h5>
                <div class="card-body">
                    <form action="/hotel/editroom/{{room._id}}" method="post" enctype="multipart/form-data">
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Image1</label>
                            <div class="col-9 col-lg-10">
                                <img src="/hotel/rooms-images/{{room._id}}1.jpg" alt=""
                                    style="width: 100px; height:100px;">
                                <input name="image1" type="file" placeholder="" class="form-control" value="">
                                <input type="hidden" name="hid" value="{{hotel._id}}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Image2</label>
                            <div class="col-9 col-lg-10">
                                <img src="/hotel/rooms-images/{{room._id}}2.jpg" alt=""
                                    style="width: 100px; height:100px;">
                                <input name="image2" type="file" placeholder="" class="form-control" value="">
                                
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Image3</label>
                            <div class="col-9 col-lg-10">
                                <img src="/hotel/rooms-images/{{room._id}}3.jpg" alt=""
                                    style="width: 100px; height:100px;">
                                <input name="image3" type="file" placeholder="" class="form-control" value="">
                                
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Image4</label>
                            <div class="col-9 col-lg-10">
                                <img src="/hotel/rooms-images/{{room._id}}4.jpg" alt=""
                                    style="width: 100px; height:100px;">
                                <input name="image4" type="file" placeholder="" class="form-control" value="">
                                
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Image5</label>
                            <div class="col-9 col-lg-10">
                                <img src="/hotel/rooms-images/{{room._id}}5.jpg" alt=""
                                    style="width: 100px; height:100px;">
                                <input name="image5" type="file" placeholder="" class="form-control" value="">
                                
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Room Name</label>
                            <div class="col-9 col-lg-10">
                                <input name="roomname" type="text" required="" value="{{room.roomname}}"
                                    placeholder="Room Name" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right"> Available Room</label>
                            <div class="col-9 col-lg-10">
                                <input name="availableroom" type="text" required="" placeholder="Rooms available"
                                    value="{{room.availableroom}}" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Room Price</label>
                            <div class="col-9 col-lg-10">
                                <input type="text" name="roomprice" required="" value="{{room.roomprice}}"
                                    placeholder="Room price" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Room Features</label>
                            <div class="col-9 col-lg-10">
                                <input name="roomfeatures" type="text" required="" placeholder="Room features"
                                    value="{{room.roomfeatures}}" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Room Number</label>
                            <div class="col-9 col-lg-10">
                                <input type="text" name="roomno" required="" placeholder="Room Number"
                                    class="form-control" value="{{room.roomno}}">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-3 col-lg-2 col-form-label text-right">Category</label>
                            <div class="col-9 col-lg-10">
                                <input name="category" type="text" required="" placeholder="Category"
                                    value="{{room.category}}" class="form-control">
                            </div>
                        </div>

                        <div class="row pt-2 pt-sm-5 mt-1">

                            <div class="col-sm-6 pl-0">
                                <p class="text-right">
                                    <button type="submit" class="btn btn-space btn-primary">Create</button>
                                    <a href="/hotel/rooms" class="btn btn-space btn-secondary">Cancel</a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>